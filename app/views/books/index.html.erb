<h1>books</h1>

<p style="color: green"><%= notice %></p>

<div>
  <i class="fa-solid fa-skull"></i>
    <%= button_to " New Book", new_book_path,
                    class: "btn btn-warning",
                    :method => :get %>
  <i class="fa-solid fa-skull"></i>
</div>
<div id="books">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Title</th>
        <th scope="col">Pages</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
          <tr>
            <td><%= book.author_first %></td>
            <td><%= book.author_last %></td>
            <td><%= book.title %></td>
            <td><%= book.pages %></td>
            <td>
                <%= button_to icon('fa-solid', 'pen'), {:controller => :books,
                                                        :action => 'edit', :id => book.id },
                                                        class: "btn btn-primary",
                                                        :method => :get %>
                <%= button_to icon('fa-solid', 'trash'), {:controller => :books,
                                                        :action => 'destroy', :id => book.id },
                                                        class: "btn btn-danger",
                                                        :method => :delete %>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>