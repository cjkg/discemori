<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table>
    <th>
      <td>First</td>
      <td>Last</td>
      <td>Title</td>
      <td>Pages</td>
    </th>
    <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= book.author_first %></td>
          <td><%= book.author_last %></td>
          <td><%= book.title %></td>
          <td><%= book.pages %></td>
        </tr>
    <% end %>
  </table>
</div>

<%= link_to "New book", new_book_path %>